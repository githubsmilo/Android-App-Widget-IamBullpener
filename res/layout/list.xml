<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/baseball_field_grass_design" > 

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/dark_green"
        android:paddingLeft="10dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:orientation="horizontal" >
        
        <TextView
            android:id="@+id/textListTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/remoteViewTitle_Default" />
    </RelativeLayout>
        
    <ListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:layout_marginBottom="2dp"
            android:cacheColorHint="#00000000" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/dark_green"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/btnListNavTop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/up_button_selector"
            android:contentDescription="@string/btn_top" />

        <ImageButton
            android:id="@+id/btnListNavPrev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/btnListNavTop"
            android:background="@drawable/prev_button_selector"
            android:contentDescription="@string/btn_prev" />

        <ImageButton
            android:id="@+id/btnListNavNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/btnListNavPrev"
            android:background="@drawable/next_button_selector"
            android:contentDescription="@string/btn_next" />

        <ImageButton
            android:id="@+id/btnSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/btnListRefresh"
            android:background="@drawable/search_button_selector"
            android:contentDescription="@string/btn_search" />
        
        <ImageButton
            android:id="@+id/btnListRefresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/btnListSetting"
            android:background="@drawable/reload_button_selector"
            android:contentDescription="@string/btn_refresh" />
        
        <ImageButton
            android:id="@+id/btnListSetting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/setting_button_selector"
            android:contentDescription="@string/btn_setting" />
	</RelativeLayout>
</LinearLayout>

