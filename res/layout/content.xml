<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/baseball_field_grass_design" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/dark_green"
        android:paddingLeft="10dp"
        android:orientation="horizontal" >
        
        <TextView
            android:id="@+id/textContentTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textAppearance="?android:attr/textAppearanceLarge"
	        android:text="@string/remoteViewTitle_Default" />
        
        <ImageButton
            android:id="@+id/btnContentExport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/export_button_selector"
            android:contentDescription="@string/btn_export" />
    </RelativeLayout>
        
    <ListView
           android:id="@+id/contentView"
           android:layout_width="match_parent"
           android:layout_height="0dip"
           android:layout_weight="1"
           android:layout_marginBottom="2dp"
           android:cacheColorHint="#00000000" />
        
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/dark_green"
        android:orientation="horizontal" >
        
        <ImageButton
            android:id="@+id/btnContentNavTop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/btnContentRefresh"
            android:background="@drawable/up_button_selector"
            android:contentDescription="@string/btn_top" />
        
        <ImageButton
            android:id="@+id/btnContentRefresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/btnContentSetting"
            android:background="@drawable/reload_button_selector"
            android:contentDescription="@string/btn_refresh" />
        
        <ImageButton
            android:id="@+id/btnContentSetting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/setting_button_selector"
            android:contentDescription="@string/btn_setting" />
    </RelativeLayout>

</LinearLayout>
