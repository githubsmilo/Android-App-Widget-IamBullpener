<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textPermitMobileConnection"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="@string/text_permitMobileConnection" />

        <CheckBox
            android:id="@+id/cbMobileConnection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true" />

    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textRefreshTime"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="@string/text_refreshTime" />
                
	    <Spinner
	        android:id="@+id/spinRefreshTime"
	        android:layout_width="200dp"
	        android:layout_height="wrap_content"
	        android:drawSelectorOnTop="true"
	        android:prompt="@string/prompt_refreshTime" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal" >
	    
        <TextView
            android:id="@+id/textBullpenBoard"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="@string/text_bullpenBoard" />
                
	    <Spinner
	        android:id="@+id/spinBullpenBoard"
	        android:layout_width="200dp"
	        android:layout_height="wrap_content"
	        android:drawSelectorOnTop="true"
	        android:prompt="@string/prompt_bullpenBoard" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal" >
        
        <TextView
            android:id="@+id/textBlackList"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="@string/text_blackList" />

        <EditText
            android:id="@+id/editBlackList"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/text_blackList_not_implemented"
            android:ems="10" >

            <requestFocus />
        </EditText>

    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal" >
        
        <TextView
            android:id="@+id/textAppInfo"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="@string/text_appInfo" />
                
        <TextView
            android:id="@+id/appInfo"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/appInfo" />
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal" >
        
        <TextView
            android:id="@+id/textAppVersion"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="@string/text_appVersion" />
                
        <TextView
            android:id="@+id/appVersion"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/appVersion" />
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btnCancel"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/btn_cancel" />

        <Button
            android:id="@+id/btnOk"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/btn_ok" />
    </LinearLayout>

</LinearLayout>